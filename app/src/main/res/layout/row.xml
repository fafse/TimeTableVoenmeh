<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="125dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="49dp"
                    android:layout_height="41dp"
                    android:foregroundGravity="bottom">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/notcurrentlessonnum" />

                    <TextView
                        android:id="@+id/lessonNumberTextView"
                        android:layout_width="37dp"
                        android:layout_height="30dp"
                        android:gravity="bottom|right"
                        android:text="1"
                        android:textColor="#FFFFFF" />

                </FrameLayout>

                <TextView
                    android:id="@+id/typeLessonTextView"
                    android:layout_width="127dp"
                    android:layout_height="30dp"
                    android:gravity="bottom|left"
                    android:text="Практическая"
                    android:textColor="#AFAFAF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/timeLessonTextView"
                    android:layout_width="224dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="bottom|right"
                    android:text="14:55-16:25"
                    android:textColor="#AFAFAF"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/lessonNameTextView"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center|left"
                android:text="Эк по Фк и Спорту"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teacherNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Бармина А.А."
                android:textColor="#AFAFAF" />

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/cabinetNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:text="TextView"
        android:textColor="#AFAFAF" />

</LinearLayout>