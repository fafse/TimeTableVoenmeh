<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeTableHandler.MainActivity">

    <TextView
        android:id="@+id/timetable"
        android:layout_width="378dp"
        android:layout_height="482dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="16dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="237dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="@+id/groupNameInput"
        tools:layout_editor_absoluteX="2dp">

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/groupNameInputButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Подтвердить"
        app:layout_constraintStart_toEndOf="@+id/textInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/timetable" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/groupNameInput"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:hint="Введите  имя группы"
        app:layout_constraintTop_toBottomOf="@+id/timetable"
        tools:layout_editor_absoluteX="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>